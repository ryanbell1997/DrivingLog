@using Client.ViewModels;
@using Domain;

@model LogEntry

@{
    Layout = "_MainLayout";

}

<div class="d-flex justify-content-center p-3 flex-column shadow rounded addEditForm">
    <h1 class="text-center pb-3" id="testyboy">Add Log Entry</h1>
    <form asp-controller="LogEntry" asp-action="AddLogEntry" method="post" class="actionForm">
            <div>
                <label asp-for="Date">Date: </label>
                @Html.EditorFor(le => le.Date)
            </div>
        <br />
            <div>
                <label asp-for="StartDateTime">Start Time: </label>
                <input asp-for="StartDateTime" type="time" />
            </div>
        <br />
            <div>

                <label asp-for="FinishDateTime">Finish Time: </label>
                <input asp-for="FinishDateTime" type="time" />
            </div>
        <br />
        <div>
            <input type="submit" class="btn btn-primary"/>
            <a asp-controller="LogEntry" asp-action="LogEntry">Back</a>
        </div>
</form>
</div>
