@model Domain.LogEntry

@{ 
    Layout = "_MainLayout";
}

<div class="d-flex justify-content-center p-3 flex-column shadow rounded addEditForm">
    <h1 class="text-center pb-3">Edit Log Entry</h1>
    <form asp-controller="LogEntry" asp-action="SubmitEditLogEntry" method="post" class="actionForm">
        <div>
            <label asp-for="Date">Date: </label>
            @Html.EditorFor(le => le.Date)
        </div>
        <br />
        <div>
            <label asp-for="StartDateTime">Start Time: </label>
            <input asp-for="StartDateTime" type="time" step="900" value="@Model.StartDateTime" class="questionInput" />
        </div>
        <br />
        <div>
            <label asp-for="FinishDateTime">Finish Time: </label>
            <input asp-for="FinishDateTime" type="time" value="@Model.FinishDateTime" class="questionInput" />
        </div>
        <br />
        <div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="submit" class="btn-primary btn" />
            <a asp-controller="LogEntry" asp-action="LogEntry">Back</a>
        </div>
    </form>
</div>
